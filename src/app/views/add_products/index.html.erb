<p id="notice"><%= notice %></p>

<h1>Add Products</h1>

<table>
  <thead>
    <tr>
      <th>Organization</th>
      <th>Date</th>
      <th>Po number</th>
      <th>Invoice number</th>
      <th>Invoice date</th>
      <th>Product</th>
      <th>Quantity units</th>
      <th>Quantity</th>
      <th>Value</th>
      <th>Weight</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @add_products.each do |add_product| %>
      <tr>
        <td><%= add_product.Organization %></td>
        <td><%= add_product.Date %></td>
        <td><%= add_product.PO_Number %></td>
        <td><%= add_product.Invoice_Number %></td>
        <td><%= add_product.Invoice_Date %></td>
        <td><%= add_product.Product %></td>
        <td><%= add_product.Quantity_Units %></td>
        <td><%= add_product.Quantity %></td>
        <td><%= add_product.Value %></td>
        <td><%= add_product.Weight %></td>
        <td><%= link_to 'Show', add_product %></td>
        <td><%= link_to 'Edit', edit_add_product_path(add_product) %></td>
        <td><%= link_to 'Destroy', add_product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

