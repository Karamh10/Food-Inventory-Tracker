<h2>Sign up</h2>
<link rel="stylesheet" href="../assets/stylesheets/users.scss">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group mx-sm-3 mb-2">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "pass-field" %>
  </div>

  <div class="form-group mx-sm-3 mb-2">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "pass-field" %>
  </div>

  <div class="form-group mx-sm-3 mb-2">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "pass-field" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-outline-primary-sm signup-btn" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
